<?xml version="1.0" encoding="UTF-8"?>
<web-app>
	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>Quiz.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>quizService</servlet-name>
		<servlet-class>de.anhquan.quiz.server.QuizServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>quizService</servlet-name>
		<url-pattern>/Quiz/quiz</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>remoteLoggingService</servlet-name>
		<servlet-class>com.google.gwt.gen2.logging.server.RemoteLoggingService
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>remoteLoggingService</servlet-name>
		<url-pattern>/Quiz/logging</url-pattern>
	</servlet-mapping>
</web-app>
